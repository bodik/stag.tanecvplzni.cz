{% extends 'base.html.twig' %}

{% block title %}StagBundle:Course:grid{% endblock %}


{% block stylesheets %}
<style>

h4 { margin-top: 0; margin-bottom: 0em; }

.coursepicture { max-height: 10em; }

a { color: inherit; }
a:hover{ color: inherit; text-decoration: none; }

.vertical-align {
  display: flex;
  flex-direction: row;
}
.vertical-align > [class^="col-"],.vertical-align > [class*=" col-"] {
  display: flex;
  align-items: center;
  justify-content: center; /* Optional, to align inner items horizontally inside the column */
}
</style>
{% endblock %}


{% block body %}
<div class="courses container">
	{% for course in courses %}
	<div class="row">
	
		<a href="{{ path('course_show', {'id': course.id}) }}">
		<div class="panel panel-default center-block" style="max-width: 500px;"><div class="panel-body">
		
 				<div class="row vertical-align">
 					<div class="col-xs-4">
						{% if course.pictureRef %}
  						<center><img class="img-responsive img-rounded coursepicture" src="{{ path('blob_get', {'id': course.pictureRef.fileName}) }}"></center>
  						{% endif %}
  					</div>
  					<div class="col-md-8">
						<div>
							<h4><span class="glyphicon glyphicon-th-large" style="color: {{course.color}};"></span>&nbsp;{{course.name}}</h4>
							{{course.level}}<br/>
							<strong>{{course.lecturer}}</strong><br/>
							{{course.place}}<br/>
							<strong>{{course.timespan}}</strong>
						</div>
					</div>
				</div>
				
  		</div></div> <!-- panel -->
  		</a>
  		
	</div> <!-- single course row -->
	{% endfor %}
</div>
{% endblock %}

