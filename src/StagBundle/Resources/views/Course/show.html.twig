{% extends 'base.html.twig' %}

{% block title %}StagBundle:Course:show{% endblock %}

{% block body %}
<div class="courses container">
	<h1>{{course.name}}</h1>

	<div class="row">
		<div class="col-md-6 text-justify">
		{{course.description}}
		</div>
		<div class="col-md-3 well pull-right">
			<dl>
				<dt>Lektor</dt>
				<dd>{{course.teacher}}</dd>
				<dt>Místo</dt>
				<dd>{{course.place}}</dd>
				<dt>Kapacita</dt>
				<dd>{{course.capacity}}</dd>
			</dl> 
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-6 text-center">
			<a class="btn btn-lg btn-info" href="{{ path('participant_application', {'course_id': course.id}) }}">Přihlásit se</a>
		</div>
		<div class="col-md-6">
			<h2>Seznam lekcí</h2>
			<ul>
			{% for lesson in course.lessons %}
				<li>{{lesson.time|date('c')}}</li>
			{% endfor %}
			</ul>
		</div>
	</div>
	
	
	
</div>
{% endblock %}

{% block stylesheets %}
{% endblock %}
