{% extends 'base.html.twig' %}

{% block body %}
<div class="tickets">
	<h1>Přidat / Upravit vstup</h1>
	{{ form_start(form) }}

        {{ form_row(form.courseRef) }}
	<div class="form-group">
		{{ form_label(form.name) }}
		<div class="col-sm-10">
			{{ form_errors(form.name) }}
			{{ form_widget(form.name) }}
			<div class="help-block">Jmeno vstupenky, napr. <em>Tanecni par</em>, <em>Jednotlivec</em>, <em>Fullpass</em></div>
		</div>
	</div>

        
	<div class="form-group">
		{{ form_label(form.price) }}
		<div class="col-sm-10">
			{{ form_errors(form.price) }}
			{{ form_widget(form.price) }}
			<div class="help-block">Cena v korunách bez uvedení haléřů a měny.</div>
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.active) }}
		<label class="col-sm-2 control-label required" for="course_active">Aktivní</label>
		<div class="col-sm-10">
			{{ form_errors(form.active) }}
			{{ form_widget(form.active) }}
			<div class="help-block">Položka určuje viditelnost vstupu/přihlášek pro veřejnost.</div>
		</div>
	</div>	

        {{ form_end(form) }}
</div>

{% endblock %}

{% block stylesheets %}
{% endblock %}
